{
  "compilerOptions": {
    "rootDir": "./",
    "module": "esnext",
    "declaration": true,
    "target": "es5",
    "jsx": "react",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": ["dom", "esnext"],
    "types": ["jest"],
    "allowJs": true,
    "noImplicitAny": false
  },
  "include": ["src", "tests"],
  "exclude": ["./node_modules"]
}
