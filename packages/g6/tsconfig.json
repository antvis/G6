{
  "compilerOptions": {
    "rootDir": "./",
    "module": "esnext",
    "declaration": true,
    "sourceMap": true,
    "target": "es5",
    "outDir": "lib",
    "jsx": "react",
    "importHelpers": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": ["esnext", "dom"],
    "skipLibCheck": true
  },
  "include": ["src"]
}
