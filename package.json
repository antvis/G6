{
  "name": "g6",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build:demos": "cd ./packages/pc && npm run demos",
    "build:site": "cd ./packages/site && npm run start",
    "build:core": "cd ./packages/core && npm run build",
    "build:element": "cd ./packages/element && npm run build",
    "build:plugins": "cd ./packages/pc-plugins && npm run build",
    "build:g6-pc": "cd ./packages/pc && npm run build",
    "build:g6": "cd ./packages/g6 && npm run build",
    "build": "lerna build",
    "lint": "lerna run lint",
    "test": "lerna run test --no-private",
    "prettier": "prettier --write '**/*.{js,jsx,tsx,ts,less,md,json}'",
    "pretty-quick": "pretty-quick",
    "clean": "lerna clean",
    "clear": "lerna clean && lerna clean -y",
    "clean:modules": "rimraf node_modules",
    "bootstrap": "lerna bootstrap",
    "ls": "lerna list"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && lerna run --concurrency 1 --stream precommit"
    }
  },
  "lint-staged": {
    "*.{js,jsx,tsx,ts,less,md,json}": [
      "pretty-quick â€”-staged"
    ]
  },
  "dependencies": {
    "eslint": "^7.11.0",
    "eslint-config-prettier": "^6.7.0",
    "eslint-plugin-import": "^2.18.2",
    "husky": "^4.2.5",
    "lerna": "^3.19.0",
    "lint-staged": "^10.2.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.1.2",
    "pretty-quick": "^3.0.2",
    "rimraf": "^3.0.0",
    "tslint": "^6.1.3",
    "tslint-config-airbnb": "^5.11.2",
    "tslint-config-prettier": "^1.18.0",
    "tslint-eslint-rules": "^5.4.0",
    "typescript": "^4.0.3"
  },
  "devDependencies": {
    "@umijs/fabric": "^2.3.1",
    "pre-commit": "^1.2.2"
  }
}
